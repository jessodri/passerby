<p id="notice"><%= notice %></p>
<h2><%= @profile.full_name %>'s Profile</h2>
<% if policy(@profile).edit? %>
<div type="button" class="btn">
      <%= link_to 'Edit Profile', edit_profile_path(@profile) %><br>
</div>
<% end %>

<div class="profile-page">
  <div class="profile-info">
    <p>
        <%= image_tag @profile.image_url(:medium) unless @profile.image.blank? %>
    </p>

    <p>
      <strong>Name:</strong>
      <%= @profile.full_name %>
    </p>

  <% if current_user == @profile.user %>
    <p>
      <strong>Email:</strong>
      <%= @profile.user.email %>
    </p>
  <% else %>
  <% end %>

    <p>
      <strong>Bio:</strong>
      <%= @profile.bio %>
    </p>

    <p>
      <strong>Location:</strong>
      <%= @profile.partial_address %>
    </p>

    <%= google_map_image_tag(@profile) %><br>
  </div>

  <div class="request-info">
    <% if current_user == @profile.user %>
    <h3>My Pickup Requests </h3>
    <% @pickup_requests.each do |request|%>
    <div class="request-info-card">
        <p><strong>Item Name: </strong><%= request.item_name %></p>
        <p><strong>Pickup Location:</strong> <%= request.pickup_address.titleize %></p>
      <% if request.user_to_pickup.nil? %>
        <p><strong>Status:</strong> Not Accepted</p>
      <% else %> 
        <p>
          <% request.user_to_pickup.accepted %><strong>Status:</strong> Accepted 
        </p>
        <p>
          <strong>Accepted by: </strong><%= link_to request.user_to_pickup.user.profile.full_name, profile_path(request) %>
          <br>
        </p>

        <%= form_tag charge_pickup_request_path(request) do %>
            <article>
              <% if flash[:error].present? %>
                <div id="error_explanation">
                  <p><%= flash[:error] %></p>
                </div>
              <% end %>
            </article>

            <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
              data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
              data-description="Payment for: <%= request.user_to_pickup.user.profile.full_name %>"
              data-amount="<%= request.payment_amount %>"
              data-currency="AUD"
              data-label="Pay <%= request.user_to_pickup.user.profile.full_name %>"
              data-email=<%= request.user.email %>
              data-locale="auto">
            </script>
        <% end %>
        <%#= render 'pickup_requests/charge_form', pickup_request: request, user: current_user %>
      <% end %>
     <br>
      <%= link_to "View messages", conversations_path({ :pickup_request_id => @pickup_request}) %>
      <%= link_to 'View Request', pickup_request_path(request) %><br>
    </div>
    <% end %>
  <% end %>
</div>
</div>
