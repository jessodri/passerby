<h1>New Pick-Up Request</h1>
<%= form_with(model: @pickup_request) do |form| %>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
<br>

  <div class="field">
    <%= form.label :item_photo %>
    <%= form.text_field :image_data %>
  </div>

  <div class="field">
    <%= form.label :pickup_address %>
    <%= form.text_field :pickup_address %>
  </div>
<br>

<br>

<div class="field">
    <%= form.label :delivery_address %>
    <%= form.text_field :delivery_address %>
</div>

<div class="field">
    <%= form.label :payment_amount %>
    <%= form.number_field :payment_amount %>
</div>

<br>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<br>
